<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_reserv_background"
        android:background="@drawable/book_item_background">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlackShadow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:id="@+id/my_reserv_time_from"
            android:text="20:00"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:id="@+id/my_reserv_time_to"
            android:text="22:00"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <View
            android:id="@+id/book_item_dash"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_item_dash"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:id="@+id/my_reserv_date"
            android:text="28.03.2018"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <View
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/more_title_background"
            android:layout_alignTop="@+id/book_item_dash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_item_dash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="подробнее"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:gravity="center"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>